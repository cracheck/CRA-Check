<UserControl x:Class="CRA_Check.Views.WorkspaceStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRA_Check.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="50,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Softwares"/>
        <local:VulnerabilityRiskLevelControl Grid.Row="0" Grid.Column="1"
                                             CriticalNumber="{Binding SoftwareCriticalNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             HighNumber="{Binding SoftwareHighNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             MediumNumber="{Binding SoftwareMediumNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             LowNumber="{Binding SoftwareLowNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             NoRiskNumber="{Binding SoftwareNoRiskNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             UnknowNumber="{Binding SoftwareUnknowNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"/>
        
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Releases"/>
        <local:VulnerabilityRiskLevelControl Grid.Row="1" Grid.Column="1"
                                             CriticalNumber="{Binding ReleaseCriticalNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             HighNumber="{Binding ReleaseHighNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             MediumNumber="{Binding ReleaseMediumNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             LowNumber="{Binding ReleaseLowNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             NoRiskNumber="{Binding ReleaseNoRiskNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             UnknowNumber="{Binding ReleaseUnknowNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"/>
        
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Components"/>
        <local:VulnerabilityRiskLevelControl Grid.Row="2" Grid.Column="1"
                                             CriticalNumber="{Binding ComponentCriticalNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             HighNumber="{Binding ComponentHighNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             MediumNumber="{Binding ComponentMediumNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             LowNumber="{Binding ComponentLowNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             NoRiskNumber="{Binding ComponentNoRiskNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"
                                             UnknowNumber="{Binding ComponentUnknowNumber, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Last scan"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding LastScan, RelativeSource={RelativeSource AncestorType=local:WorkspaceStatusControl}}"/>
    </Grid>
</UserControl>
