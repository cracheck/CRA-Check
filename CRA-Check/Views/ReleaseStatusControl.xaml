<UserControl x:Class="CRA_Check.Views.ReleaseStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRA_Check.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
       
        <local:VulnerabilityRiskLevelControl Grid.Column="0"
                                             CriticalNumber="{Binding ComponentCriticalNumber, RelativeSource={RelativeSource AncestorType=local:ReleaseStatusControl}}"
                                             HighNumber="{Binding ComponentHighNumber, RelativeSource={RelativeSource AncestorType=local:ReleaseStatusControl}}"
                                             MediumNumber="{Binding ComponentMediumNumber, RelativeSource={RelativeSource AncestorType=local:ReleaseStatusControl}}"
                                             LowNumber="{Binding ComponentLowNumber, RelativeSource={RelativeSource AncestorType=local:ReleaseStatusControl}}"
                                             NoRiskNumber="{Binding ComponentNoRiskNumber, RelativeSource={RelativeSource AncestorType=local:ReleaseStatusControl}}"
                                             UnknowNumber="{Binding ComponentUnknowNumber, RelativeSource={RelativeSource AncestorType=local:ReleaseStatusControl}}"/>

        <TextBlock Grid.Column="1" Text="{Binding LastScan, RelativeSource={RelativeSource AncestorType=local:ReleaseStatusControl}}" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
